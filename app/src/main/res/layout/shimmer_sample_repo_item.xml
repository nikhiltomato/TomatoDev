<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_21dp">

        <View
            android:id="@+id/thumbnail_view"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_centerVertical="true"
            android:background="@color/color_dddddd"
            android:contentDescription="@null" />

        <View
            android:id="@+id/name_view"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_toRightOf="@+id/thumbnail_view"
            android:background="@color/color_dddddd"
            android:textColor="@color/color_53575c"
            android:textSize="@dimen/dimen_12sp"
            />

        <View
            android:id="@+id/tv_repoName"
            android:layout_width="@dimen/dimen_260dp"
            android:layout_height="@dimen/dimen_10dp"
            android:layout_below="@+id/name_view"
            android:layout_alignLeft="@+id/name_view"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:background="@color/color_dddddd"
            android:textColor="@color/color_53575c"
            android:textSize="@dimen/dimen_15sp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_dddddd" />
</LinearLayout>