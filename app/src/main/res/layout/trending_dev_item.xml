<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_16dp"
    android:id="@+id/dev_item_parent_lyt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/color_e8e8e8"
        android:id="@+id/sep_view"
    />

    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sep_view"
        android:layout_marginTop="@dimen/dimen_16dp"
        tools:text="Trending 1"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="@color/color_52575c"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
    />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username_tv"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:textSize="@dimen/dimen_15sp"
        tools:text="PythonDatScienceHandbook"
        android:textColor="@color/color_52575c"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
    />


    <ImageView
        app:layout_constraintTop_toBottomOf="@id/username_tv"
        app:layout_constraintBottom_toTopOf="@id/name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/dimen_16dp"
        tools:src="@drawable/ic_launcher_background"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="@dimen/dimen_32dp"
        android:id="@+id/avatar_iv"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="C++"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
        android:drawablePadding="@dimen/dimen_5dp"
        android:id="@+id/url_tv"
        />



